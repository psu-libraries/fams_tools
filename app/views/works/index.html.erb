<h1>Works: <%= @publication_listing.name %> (<%= @works.count %> records)</h1>
<%= link_to "<< Back to Publication Listing", publication_listings_path %>
| 
<%= link_to "Download as xlsx", publication_listing_works_path(format: :xlsx) %>
|
<%= link_to "Download as csv", publication_listing_works_path(format: :csv) %>
|
<%= link_to "Download as bibtex", publication_listing_works_path(format: :bibtex) %>
<div style="height:1200px;overflow:auto;">
<table class="table table-striped table-responsive">
  <tr>
    <th>username</th>
    <th>activity insight id</th>
    <th>author</th>
    <th>title</th>
    <th>journal</th>
    <th>volume</th>
    <th>edition</th>
    <th>pages</th>
    <th>date</th>
    <th>booktitle</th>
    <th>container</th>
    <th>type</th>
    <th>contype</th>
    <th>doi</th>
    <th>editor</th>
    <th>institution</th>
    <th>isbn</th>
    <th>location</th>
    <th>note</th>
    <th>publisher</th>
    <th>retrieved</th>
    <th>tech</th>
    <th>translator</th>
    <th>unknown</th>
    <th>url</th>
  </tr>
  <% @works.each do |w| %>
    <tr>
      <td><%= w.username %></td>
      <td><%= Faculty.find_by(access_id: w.username)&.user_id %></td>
      <td><%= w.author %></td>
      <td><%= w.title %></td>
      <td><%= w.journal %></td>
      <td><%= w.volume %></td>
      <td><%= w.edition %></td>
      <td><%= w.pages %></td>
      <td><%= w.date %></td>
      <td><%= w.booktitle %></td>
      <td><%= w.container %></td>
      <td><%= w.genre %></td>
      <td><%= w.contype %></td>
      <td><%= w.doi %></td>
      <td><%= w.editor %></td>
      <td><%= w.institution %></td>
      <td><%= w.isbn %></td>
      <td><%= w.location %></td>
      <td><%= w.note %></td>
      <td><%= w.publisher %></td>
      <td><%= w.retrieved %></td>
      <td><%= w.tech %></td>
      <td><%= w.translator %></td>
      <td><%= w.unknown %></td>
      <td><%= w.url %></td>
    </tr>
  <% end %>
</table>
</div>
